<!-- Navigation -->
<%= render partial: "partials/nav" %>
  <div class="container">

  	<h3 class="center">Hello, <%= @user.first_name %>!</h3>
    <h6 class="center"><%= link_to 'Edit Account', edit_user_path(@user) %></h6>
  	
  	<div class="center">

  		<% if @user_films.empty? %>
            <h3>No films yet...</h3>
            <h5>Get started  <%= link_to 'uploading films!', new_film_path %></h5>
        <% end %>
		<% @user_films.each do |film| %>
			<div class="row">
			    <div class="col s12">
			      <div class="card blue-grey darken-1">
			        <div class="card-content white-text">
			          <span class="card-title"><%= film.title %></span>
			          <p><%= film.director %></p>
			          <p><%= film.description %></p>
			        </div>
			        <div class="card-action">
			          <%= link_to("Edit film", edit_film_path(film)) %>
			          <%= link_to("Delete film", film_path(film), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }) %>
			        </div>
			      </div>
			    </div>
			</div>
		<% end %>
   </div>
</div>	

  <%= render partial: "partials/footer" %>
