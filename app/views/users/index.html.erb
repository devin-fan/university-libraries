<%= render partial: "partials/nav" %>
  <div class="container">

  	<h3 class="center">Manage Users</h3>
  	
  	<div class="center">

  		<% if @users.empty? %>
            <h3>No Users yet...</h3>
        <% end %>
		<% @users.each do |u| %>
			<div class="row">
			    <div class="col s12">
			      <div class="card blue-grey darken-1">
			        <div class="card-content white-text">
			          <span class="card-title"><%= link_to u.name, user_path(u) %></span>
			          <p><%= u.andrewid%></p>
			        </div>
			        <div class="card-action">
			          <%= link_to("Manage user", edit_user_path(u)) %>
			          <%= link_to("Delete user", user_path(u), method: :delete, data: { confirm: 'Are you certain you want to delete this user?' }) %>
			        </div>
			      </div>
			    </div>
			</div>
		<% end %>
   </div>
</div>	

<br>
