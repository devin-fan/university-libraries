<%= render partial: "partials/nav" %>
  <div class="container">

  	<h3 class="center">All Users!</h3>
  	
  	<div class="center">

  		<% if @users.all.empty? %>
            <h3>No Users yet...</h3>
        <% end %>
		<% @users.all.each do |u| %>
			<div class="row">
			    <div class="col s12">
			      <div class="card blue-grey darken-1">
			        <div class="card-content white-text">
			          <span class="card-title"><%= u.name%></span>
			          <p><%= u.andrewid%></p>
			        </div>
			        <div class="card-action">
			          <%= link_to("Edit film", edit_user_path(u)) %>
			          <%= link_to("Delete film", user_path(u), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }) %>
			        </div>
			      </div>
			    </div>
			</div>
		<% end %>
   </div>
</div>	

