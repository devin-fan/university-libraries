<%= render partial: "partials/nav" %>

  <div class="container">
  	<h3 class=" blue-text text-darken-3 center">Oscar Micheaux Films</h3>
  	
  	<div class="center">
        <% @tags.each do |tag| %>
            <div class="row">
                <div class="col s12">
                    <div class="card blue-grey darken-1">
			            <div class="card-content white-text">
			                <%= link_to tag_path(tag.id) do %>
                                <span class="card-title"><%= tag.name %></span>
                            <% end %>
			            </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
  </div>

