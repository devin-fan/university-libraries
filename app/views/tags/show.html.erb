<%= render partial: "partials/nav" %>


  <div class="container">
  	<h2 class=" blue-text text-darken-3 center"><%= @tag.name %></h2>
  	
  	<div class="center">
     	<% @tagged_films.each do |film| %>
			<div class="row">
			    <div class="col s12">
			      <div class="card blue-grey darken-1">
			        <div class="card-content white-text">
			          <span class="card-title"><%= film.title %></span>
			          <p><%= film.director %></p>
			          <p><%= film.description %></p>
			        </div>
			        <div class="card-action">
			          <%= link_to("Download Now!", "/films/#{film.id}/download", download: 'download') %></li>
			          <%= link_to("Watch Movie", "/films/#{film.id}")%>
			        </div>
			      </div>
			    </div>
			</div>
		<% end %>
	
  		<div id="film_info">
	  	</div>
  	</div>
  	


  </div>

